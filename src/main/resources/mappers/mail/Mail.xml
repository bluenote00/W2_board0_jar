<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.W2_board0_jar.dao.mail.MailDao">

    <!-- 인증코드 insert -->
    <insert id="insertRandomCode" parameterType="map">
        /* com.example.W2_board0_jar.dao.mail.MailDao */
        INSERT INTO 	USER_INFO
        (
                        APPROVAL_KEY
        ) VALUES (
                        #{approvalKey}
                 )
    </insert>

    <!-- 인증코드 체크 -->
    <select id="checkRandomCode" parameterType="map" resultType="int">
        SELECT      COUNT(*)
        FROM        USER_INFO
        WHERE       APPROVAL_KEY = #{approvalKey}
    </select>
</mapper>