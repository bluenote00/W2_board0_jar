<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

    <mapper namespace="com.example.W2_board0_jar.dao.login.LoginDao">

        <!-- 아이디 확인 -->
        <select id="selectUserByLoginId" parameterType="string" resultType="map">
            SELECT      USER_ID
                 ,      USER_PW
                 ,      USER_NAME
                 ,      CREATOR
            FROM        USER_INFO
            WHERE       USER_ID   =   #{userId}
        </select>

        <!-- 아이디 찾기 -->
        <select id="findUserId" parameterType="string" resultType="string">
            SELECT      USER_ID
            FROM        USER_INFO
            WHERE       USER_EMAIL = #{userEmail}
        </select>

        <!-- 비밀번호 찾기 -->
        <select id="findUserPW" parameterType="string" resultType="string">
            SELECT      USER_PW
            FROM        USER_INFO
            WHERE       USER_ID = #{userId}
        </select>


</mapper>

